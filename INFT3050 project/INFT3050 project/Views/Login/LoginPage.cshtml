@model INFT3050_project.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>


<div>
    <form asp-controller="Login" asp-action="LoginPage" method="post">
        <div>
            <label asp-for="UserName"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="HashPW">Password</label>
            <input asp-for="HashPW" type="password" />
            <span asp-validation-for="HashPW"></span>
        </div>
        <div>
            <button type="submit">Login</button>
        </div>
    </form>  
</div>



<div>
    <button asp-controller="Login" asp-action="Recovery" formmethod="get">Forgot Password</button>
    <a href="@Url.Action("CreateAccountPage", "Login")" class="btn btn-primary">Go to New View</a>
</div>

